<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/round_background_blue"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/txt_small_day"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sunday" />

    <ImageView
        android:id="@+id/img_small_weather"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/weather_icon"
        app:layout_constraintEnd_toStartOf="@id/txt_small_temperature"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_tornado" />

    <TextView
        android:id="@+id/txt_small_temperature"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="62° / 75°" />

</androidx.constraintlayout.widget.ConstraintLayout>